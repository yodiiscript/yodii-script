<UserControl x:Class="GUI.Watch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="500">
    <Grid x:Name="board">

        <TextBox x:Name="addVars" HorizontalAlignment="Left" Height="23" Margin="0,80,0,0" TextWrapping="Wrap" Text="addVars" VerticalAlignment="Top" Width="120" TextAlignment="Center"/>
        <Button x:Name="add" Content="add" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="248,81,0,0" Click="add_Click"/>
        <ListView Name="Watche" Margin="0,103,0,0" ItemsSource="{Binding VarsCollection}" AlternationCount="-1" IsSynchronizedWithCurrentItem="True">
            <ListView.View>
                <GridView>

                    <GridViewColumn x:Name="Name" Width="140" Header="Name" DisplayMemberBinding="{Binding VarName}"/>
                    <GridViewColumn x:Name="Type" Width="140" Header="Type" DisplayMemberBinding="{Binding VarType}"/>
                    <GridViewColumn x:Name="Value" Width="140" Header="Value">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding VarValue}" IsReadOnly="False" KeyDown="TextBox_KeyDown" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Button x:Name="clearButton" Content="Clear" HorizontalAlignment="Left" Margin="323,80,0,0" VerticalAlignment="Top" Width="75" Click="clearButton_Click"/>
        <Button x:Name="_continue" Content="Continue" HorizontalAlignment="Left" Margin="0,25,0,0" VerticalAlignment="Top" Width="154" Height="37" Click="_continue_Click"/>
    </Grid>
</UserControl>
